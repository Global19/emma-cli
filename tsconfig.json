{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["dom", "es2017", "esnext.asynciterable"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": ["./src/**/*.ts", "src/bin.tsx"],
  "exclude": ["node_modules", "dist"]
}
